<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".flowlayout.MainFlowActivity">

    <Button
        android:id="@+id/btn_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go FlowLayout" />

    <Button
        android:id="@+id/btn_go_flex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go FlexBoxLayout" />

    <Button
        android:id="@+id/btn_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go FlexBoxLayoutManager" />

    <Button
        android:id="@+id/btn_tag_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go TagFlowLayout" />
</LinearLayout>